<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_1"
        android:roundIcon="@mipmap/ic_launcher_1_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SplitWallet"
        tools:targetApi="31">
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SplitWallet.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GroupDetailsActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SplitWallet.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ui.MemberDetailsActivity" />
        <activity
            android:name=".ui.JoinGroupActivity" />
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.SplitWallet.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SplitWallet.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GroupExpensesActivity"
            android:theme="@style/Theme.SplitWallet.NoActionBar"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>