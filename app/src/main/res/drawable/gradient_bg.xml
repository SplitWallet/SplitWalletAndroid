<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">  <!-- или oval, ring, line -->

    <!-- Основной градиент -->
    <gradient
        android:angle="45"
        android:startColor="#673AB7"
        android:endColor="#2196F3"
        android:type="linear" />

    <!-- Дополнительные параметры (необязательно) -->
    <corners android:radius="8dp" />  <!-- Скругление углов -->
    <stroke android:width="1dp" android:color="#FFFFFF" />  <!-- Обводка -->
</shape>